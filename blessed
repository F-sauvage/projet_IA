#test mottes (2) avec fond tan4
----------------------------------

import blessed
term = blessed.Terminal()

with term.cbreak(), term.hidden_cursor():
    print(term.home + term.black_on_tan4 + term.clear)

with term.location():
    print(term.move_xy(1, 1))

print(term.move_down(1) + term.move_right(1) + term.tan4('█'))
print(term.move_right(1) + term.tan4('█'))
print(term.move_right(1) + term.tan4('█'))
print(term.move_right(1) + term.tan4('█'))
print(term.move_right(1) + term.tan4('█'))

print(term.move_right(2) + term.move_up(5) + term.tan4('█'))
print(term.move_right(2) + term.tan4('█'))
print(term.move_right(2) + term.tan4('█'))
