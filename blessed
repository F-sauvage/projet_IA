print(term.move_right(2) + term.tan4('█'))

print(term.move_right(3) + term.move_up(5) + term.tan4('█'))
print(term.move_right(3) + term.darkgreen('█'))
print(term.move_right(3) + term.green4('█'))
print(term.move_right(3) + term.darkgreen('█'))
print(term.move_right(3) + term.tan4('█'))

print(term.move_right(4) + term.move_up(5) + term.tan4('█'))
print(term.move_right(4) + term.green4('█'))
print(term.move_right(4) + term.darkgreen('█'))
