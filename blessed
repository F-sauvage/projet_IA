import blessed
term = blessed.Terminal()
print(term.home + term.oliverab4 + term.clear)
print(term.home + term.clear, end='') 

with term.location():
    print(term.move_xy(1, 1))

print(term.move_down(1) + term.move_right(1) + term.green4('█'))
print(term.move_right(1) + term.darkgreen('█'))
print(term.move_right(1) + term.green4('█'))
print(term.move_right(1) + term.darkgreen('█'))
print(term.move_right(1) + term.green4('█'))

